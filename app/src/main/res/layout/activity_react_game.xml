<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Instructions"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="@string/instructions" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:adjustViewBounds="true"
        android:src="@drawable/curry"
        android:maxHeight="200dp"
        android:clickable="true"
        android:onClick="buttonOnClick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_remaining"
        android:id="@+id/TimeRemain"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/Timer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120"
        android:id="@+id/Timer"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/Counter"
        android:singleLine="true"
        android:textSize="50dp"
        android:layout_below="@+id/TimeRemain"
        android:layout_toEndOf="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Amount"
        android:textColor="#fc3104"
        android:textSize="30dp"
        android:layout_toEndOf="@+id/Counter"
        android:layout_alignTop="@+id/TimeRemain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/endLose"
        android:phoneNumber="false"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColorHighlight="#fd8d8d"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:autoText="false" />


</RelativeLayout>